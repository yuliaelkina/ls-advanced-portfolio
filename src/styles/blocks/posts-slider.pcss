.posts-slider {display: flex;}
.posts-slider__item {
  position: relative;
  margin-left: 100px; flex: 0.5;
&::before {
  content: ""; position: absolute;
  height: 60px;width: 75px;
  display: block; opacity: 0.07;
  background: svg-load('quote.svg', fill=#fff, height=100%, width=100%);
  background-repeat: no-repeat;top: 0;left: -75px;
}}
.posts-slider__text {font-weight: 700; opacity: 0.5;
  margin-bottom: 30px;}

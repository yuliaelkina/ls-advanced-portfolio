.author {
  display: flex;
  align-items: center;
}
.author__avatar {
  width: 80px;
  height: 80px;
  margin-right: 30px;
  overflow: hidden;
  border-radius: 50%;
}
.author__avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.author__name {
  font-size: 1.125rem;
  font-weight: 800;
  margin-bottom: 15px;
}
.author__job {
  font-weight: 700;
  opacity: 0.3;
}
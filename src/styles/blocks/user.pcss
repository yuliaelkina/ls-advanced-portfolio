.user {
  margin-left: 20px;
}
.user__avatar {
  margin: 0 auto;
  width: 200px;
  height: 200px;
  margin-bottom: 70px;
  overflow: hidden;
  border-radius: 50%;
}
.user__avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
    }  
.user__text {
  margin-left: 60px;
  font-weight: 600;
}
.user__data-cell {
  line-height: 2.2;
  width: 50%;
&:first-child {
  opacity: 0.2;}
}
